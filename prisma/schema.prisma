// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  role         Role           @default(USER)
  profile      Profile?
  books        Books[]
  reservations Reservations[]
}

model Profile {
  id           Int     @id @default(autoincrement())
  name         String
  user         User    @relation(fields: [userId], references: [id])
  userId       Int     @unique
  extraContact String?
}

model Books {
  image       String
  id          String        @id @default(uuid())
  title       String
  class       Int?
  subject     Subject?
  price       Int
  condition   Int
  userId      Int
  reserved    Boolean       @default(false)
  user        User          @relation(fields: [userId], references: [id])
  reservation Reservations?
}

model Reservations {
  bookId         String   @id
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  book           Books    @relation(fields: [bookId], references: [id])
  createdAt      DateTime @default(now())
  reservationEnd DateTime
}

enum Subject {
  Matematyka
  Polski
  Angielski
  Niemiecki
  Historia
  Biologia
  Chemia
  Fizyka
  Geografia
  WOS
  Informatyka
  Plastyka
  Muzyka
  Religia
  WF
  Technika
  Przyroda
  Inne
}

enum Role {
  USER
  ADMIN
}
